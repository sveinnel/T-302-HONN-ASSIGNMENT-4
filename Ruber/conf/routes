# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                  controllers.Application.index()
GET         /signup                            controllers.SignupController.blank()
POST        /signup                            controllers.SignupController.signup()
GET         /login                             controllers.LoginController.blank()
POST        /login                             controllers.LoginController.login()
GET         /logout                            controllers.LoginController.logout()
GET         /drivers                           controllers.DriverController.index()


GET         /driverss                           controllers.DriverController.getDrivers()
GET         /rider/history                     controllers.RideController.getListOfTrips()
GET         /products                          controllers.DriverController.getAllProducts()
GET         /product/:productid/reviews        controllers.DriverController.getReviwsByProductId(productid: Int)
POST        /product/review                    controllers.DriverController.addReview()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                      controllers.Assets.at(path="/public", file)

